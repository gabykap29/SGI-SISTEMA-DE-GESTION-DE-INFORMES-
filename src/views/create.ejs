<!doctype html>
<html lang="es">

<head>
  <link rel="icon" href="/css/images/OIG.png">
  <title>SGI - CARGAR INFORMES</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="/bootstrap/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">
<script src="/sweetalert/sweetalert2@11"></script>
</head>

<body>
  <%- include('./partials/headers-aside.ejs');%>
              <div class="col-10 bgForm py-2">
                <div class="card ">
                  <div class="card-body">
                    <div class="container d-flex ">
                      <h4>Cargar Informes</h4>
                    </div>
                  </div>
                </div>
            <br>
                <div class="card  ">
                  <div class="card-body">
                    <div class=" form-cargar">
                      <form action="" class="row g-3 needs-validation" id="formNuevoInforme" enctype="multipart/form-data">
                          <div class="col-md-3 position-relative">
                              <label for="validationTooltip04" class="form-label"><b>Departamento</b></label>
                              <select class="form-select input" id="selecDepartamento" required>
                                <option value="1">Formosa</option>
                                <option value="2">Pilcomayo</option>
                                <option value="3">Pilagás</option>
                                <option value="4">Laishí</option>
                                <option value="5">Pirané</option>
                                <option value="6">Patiño</option>
                                <option value="7">Bermejo</option>
                                <option value="8">Ramon Lista</option> 
                                <option value="9">Matacos</option>
                              </select>
                            </div>
                            <div class="col-md-3 position-relative">
                              <label for="validationTooltip04" class="form-label"><b>Localidad</b></label>
                              <select class="form-select input" id="selecLocalidad" required>
                                <option selected disabled>Selecciona una opción</option>
                              </select>
                              <div class="invalid-tooltip">
                                Please select a valid state.
                              </div>
                            </div>
                            <div class="col-md-3 position-relative">
                              <label for="validationTooltip04" class="form-label"><b>Tipo</b></label>
                              <select class="form-select input" id="tipo" required>
                                <option value="1">Política</option>
                                <option value="2">Institucional</option>
                                <option value="3">Educación</option>
                                <option value="4">Religioso</option>
                                <option value="5">Proselitismo</option>
                                <option value="6">Salud</option>
                                <option value="7">Seguridad</option>
                                <option value="8">Eventos Climáticos</option>
                                <option value="9">Hídricos</option>
                              </select>
                            </div>
                          <div class="col-md-2 position-relative">
                            <label for="validationTooltip02" class="form-label"><b>Fecha</b></label>
                            <input type="date" class="form-control input" id="fecha" value="" required>
                          </div>
                          <div class="col-md-3 position-relative">
                            <label for="validationTooltipUsername" class="form-label"><b>Titulo</b></label>
                            <div class="input-group has-validation">
                              <input type="text" class="form-control input" id="titulo" aria-describedby="validationTooltipUsernamePrepend" required>
                            </div>
                          </div>
                          <div class="col-md-3 position-relative">
                              <label class="input-group-text " for="inputGroupFile01"><b>Imagenes</b></label>
                              <input type="file" class="form-control input" id="rutaImagen" name="rutaImagen">
                            </div>   
                            <div class="col-md-3 position-relative">
                              <label for="validationTooltipUsername" class="form-label" ><b>Observaciones</b></label>
                              <div class="input-group has-validation">
                                <input type="text" class="form-control input" id="observaciones" aria-describedby="validationTooltipUsernamePrepend" required>
                              </div>
                            </div>           
                            <div class="mb-1">
                              <label for="exampleFormControlTextarea1" class="form-label"><b>Informe</b></label>
                              <textarea class="form-control input" id="informe" rows="3" style="height:180px;"></textarea>                
                              <div class="mb-1" id="seccionPersonas">
                                <button class="btn " id="btnPeople"><img id="iconPerson" src="/css/images/agregar-usuario.png" alt=""></button>
                                <div>
                                  <div class="container">
                                    <div class="row" id="formPeople">
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <button class="btn btn-primary" type="submit">Cargar Informe</button>
                              <button class="btn btn-secondary" type="reset">Borrar campos</button>
                            </div>             
                        </form>
                  </div>
                  </div>
                </div>
          </div>
        </div>
        </div>
          </main>
        </div>

    </div>
</div>
<%- include('./partials/footer.ejs');%>
  <!--scripts Localidades-->
  <script src="/js/app.js"></script>
  <script src="/js/reports/create.js" ></script>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="/popper/popper.min.js">
  </script>
<script src="/bootstrap/bootstrap.min.js">
</script>
  </script>
  <script src="/js/loaded.js"></script>
  <script src="/jquery/code.jquery.com_jquery-3.7.1.min.js"></script>
</body>

</html>
