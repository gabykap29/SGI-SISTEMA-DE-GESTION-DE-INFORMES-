          <main>
            <!-- Chart informes pendientes -->
            <div class="container-fluid pt-4 px-4 ">
                <div class="  rounded  mx-0">
                  <div class="col-12 ">
                    <div class="card rounded bg-light shadow">
                      <div class="card-header">
                        <h6 class="">
                          <i class="bi bi-file-earmark-plus-fill me-2"></i>
                          Crear Nuevo Informe
                        </h6>
                      </div>
                      <div class="card-body">
                        <div class=" mx-3 form-cargar">
                          <form action="" class="row  needs-validation" id="newReport" >
                              <div class="col-md-3 position-relative">
                                  <label for="validationTooltip04" class="form-label"><b>Departamento</b></label>
                                  <select class="form-select input" name="Departamento_idDepartamento" id="selecDepartamento" required>
                                    <option selected disabled>Selecciona una opción</option>
                                    
                                  </select>
                                </div>
                                <div class="col-md-3 position-relative">
                                  <label for="validationTooltip04" class="form-label"><b>Localidad</b></label>
                                  <select class="form-select input" id="selecLocalidad" name="Localidad_idLocalidad" required>
                                    <option selected disabled>Selecciona una opción</option>
                                  </select>
                                </div>
                                <div class="col-md-3 position-relative" id="divTipo">
                                  <label for="validationTooltip04" class="form-label"><b>Tipo</b></label>
                                  <select class="form-select input" id="tipo" name="Tipo_idTipo" required>
                                    <option value="1">Política</option>
                                    <option value="2">Institucional</option>
                                    <option value="3">Educación</option>
                                    <option value="4">Religioso</option>
                                    <option value="5">Proselitismo</option>
                                    <option value="6">Salud</option>
                                    <option value="7">Seguridad</option>
                                    <option value="8">Eventos Climáticos</option>
                                    <option value="9">Hídricos</option>
                                  </select>
                                </div>
                              <div class="col-md-2 position-relative">
                                <label for="validationTooltip02" class="form-label"><b>Fecha</b></label>
                                <input type="date" class="form-control input" id="fecha" name="Fecha"  required>
                              </div>
    
                              <div class="col-md-3 position-relative">
                                <label for="validationTooltipUsername" class="form-label"><b>Titulo</b></label>
                                <div class="input-group has-validation">
                                  <input type="text" class="form-control input" id="titulo" name="Titulo" aria-describedby="validationTooltipUsernamePrepend" required>
                                </div>
                              </div>
             
                                <div class="mb-1">
                                  <label for="exampleFormControlTextarea1" class="form-label"><b>Informe</b></label>
                                  <textarea class="form-control input" id="informe" name="informe" rows="3" style="height:180px;"></textarea>                
                                  
                                  <div class="col-12 position-relative d-none">
                                    <label for="exampleFormControlTextarea1" class="form-label">Completado</label>
                                    <input type="checkbox" class="form-check-input" name="isComplete" id="isCompleted" checked>          
                                  </div>  
                                  <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    Cargar Informe
                                  </button>
                                  <button class="btn btn-secondary" type="reset">
                                    <i class="bi bi-x-circle-fill me-2"></i>
                                    Borrar campos
                                  </button>
                                  
                                </div>                                        
                            </form>
                            
                      </div>
                      
                      </div>
                      
                    </div>
              </div>

            </div>
            
                     
            </div>
