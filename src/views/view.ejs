<!doctype html>
<html lang="es">

<head>
  <link rel="icon" href="/css/images/OIG.png">
  <title>SGI - Ver Informe</title>
  <meta http-equiv="Content-Security-Policy" content="script-src 'self' 'unsafe-inline';">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="/bootstrap/bootstrap.min.css" media="print" rel="stylesheet">
  <link href="/bootstrap/bootstrap.min.css"  rel="stylesheet">
  <link rel="stylesheet"  href="/css/style.css">

<script src="/sweetalert/sweetalert2@11"></script>
<script src="/dayjs/dayjs.min.js"></script>
</head>

<body>
  <%- include('./partials/headers-aside.ejs');%>
  <div class="container col-10" style="background-color: rgb(233, 233, 233); ;" >
    <div class="card mt-2 shadow">
      <div class="card-body ">
        <h2> Informe Completo </h2>
      </div>
    </div>
      <div class="row">
        <div class="col-6">
          <div class=" mt-4">
            <div class="card-body" style="background-color: rgb(233, 233, 233);">
              <div class="card shadow">
                <div class="container m-3" id="titles">
                  <!-- Contenido del div #titles -->
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="card rounded bg-black shadow" id="imagen">
            <!-- Contenido del div #imagen -->
            <img src="/css/images/imagen-no-disponible.jpg" alt="">
          </div>
        </div>
        <div class="col-6">
          <div class="card mt-4 shadow">
            <div class="m-3 d-flex justify-content-center" id="titleReport">
              <!-- Contenido del div #titleReport -->
            </div>
            <div class="container d-flex align-items-center justify-content-center" id="informeView">
              <!-- Contenido del div #informe -->
            </div>
            <!--modal-->
            <div class="modal fade" id="modalCategoryCreate" tabindex="-1" aria-labelledby="modalCategoryCreateLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalCategoryCreateLabel">Personas</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <form action="" id="formPerson">
                  <div class="modal-body">

                      <div class="mb-3">
                        <label for="dni" class="form-label">DNI</label>
                        <input type="text" class="form-control" id="dni" name="dni" placeholder="41176787">
                      </div>
                      <div class="mb-3">
                        <label for="lastName" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="lastName" name="lastName">
                      </div>
                      <div class="mb-3">
                        <label for="firstName" class="form-label">Nombres</label>
                        <input type="text" class="form-control" id="firstName" name="firstName">
                      </div>
                      <div class="mb-3">
                        <label for="address" class="form-label">Domicilio</label>
                        <input type="text" class="form-control" id="address" name="address">
                      </div>
                      <div class="mb-3">
                        <label for="address" class="form-label">Fecha de Nacimiento</label>
                        <input type="date" class="form-control" id="fechaNac" name="fechaNac">
                      </div>
                      <div class="mb-3">
                        <label for="description" class="form-label">Observaciones</label>
                        <textarea class="form-control" id="description" name="description"></textarea>
                      </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button class="btn btn-secondary" type="reset">Borrar Campos</button>
                    <button  id="cargarPersona" type="submit" class="btn btn-primary">Guardar</button>
                  </div>
                </form>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-5" style="background-color: rgb(233, 233, 233);">
            <div class="card shadow mt-2">
              <div class="card-body">
                <div class="mb-1" id="seccionPersonas">
                  <div id="cantPersonas"></div>
                  <div class="container table table-responsive">
                    <div class="table-responsive">
                      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCategoryCreate" >
                        Agregar personas
                       </button>
                          <table class=" table table-bordered table-hover table-striped mt-2" id="tablaInformes">
                              <thead class="table-primary">
                                  <tr>
                                      <th>DNI</th>
                                      <th>Apellido</th>
                                      <th>Nombress</th>
                                      <th>Fecha de Nac. </th>
                                      <th>Domicilio </th>
                                  </tr>
                              </thead>
                              <tbody  id="personas">
                    
                              </tbody>
                          </table>
                  </div>
                  </div>
                  <div>
                    <div class="container">
                      <div class="row" id="formPeople">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br><br><br>
      </div>
        </div>

    </div>
</main>

  <%- include('./partials/footer.ejs');%>
  </div>

  <script src="/js/reports/obtener.js"></script>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="/popper/popper.min.js">
  </script>

  <script src="/bootstrap/bootstrap.min.js">
  </script>
    <script src="/js/loaded.js"></script>
    <script src="/jquery/code.jquery.com_jquery-3.7.1.min.js"></script>
</body>

</html>